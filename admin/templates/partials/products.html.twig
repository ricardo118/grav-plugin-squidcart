<div class="pure-g" id="products">
    {% for product in products %}
        {% if product.type is same as("good") %}
        <div class="pure-u-1-3 content-padding">
            <div class="product-wrapper">
                <a href="{{ uri.path }}/product:{{ product.id }}">
                    <img src="{{ product.images|first }}"/>
                    <div class="product-details">
                        <h1 class="product-title">{{ product.name }}</h1>
                    </div>
                </a>
            </div>
        </div>
        {% endif %}
    {% endfor %}
</div>

<div class="pure-g" id="product">
    <div class="pure-u-1-2 content-padding">
        <a class="" href="{{ uri.path }}/products"><i class="fa fa-chevron-left"></i>back</a>
    </div>
    <div class="pure-u-1-2 content-padding text-right">
        <a class="" href="https://dashboard.stripe.com/{{ squidcart.mode }}/orders/products/{{ id }}" target="_blank">view in stripe</a>
    </div>
    {% for sku in getProduct(id, true).skus %}
        <div class="pure-u-1-3 content-padding">
            <div class="product-wrapper">
                <a href="{{ uri.path }}/product:{{ product.id }}">
                    <img src="{{ sku.image }}"/>
                    <div class="product-details">
                        <h1 class="product-title">{{ sku.attributes.size }}</h1>
                        <h1 class="product-title">{{ sku.attributes.color }}</h1>
                    </div>
                </a>
            </div>
        </div>
    {% endfor %}
</div>
